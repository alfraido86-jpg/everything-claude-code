{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/ABSOLUTE/PATH/TO/YOUR/PROJECTS"
      ],
      "deny": [
        "Read(./.env)",
        "Read(./.env.*)",
        "Write(./.env)",
        "Read(./config/secrets.*)",
        "Write(./config/secrets.*)"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    }
  }
}
